@model IEnumerable<test.Domain.Core.Dog>

<!doctype html>
<html lang="en">
<head>
    <title>DogBlogContact</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800" rel="stylesheet">

    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

    <link rel="stylesheet" href="~/fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="~/fonts/fontawesome/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">

    <!-- Theme Style -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>

    <header role="banner">
        <nav class="navbar2 navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand absolute" asp-controller="Home" asp-action="Index">Dog_blog</a>

                <div class="collapse navbar-collapse" id="navbarsExample05">
                    <ul class="navbar-nav mx-auto pl-lg-5 pl-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Главная страница</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">О нас</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Породы</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                @foreach (var item in Model)
                                {
                                    <a asp-controller="Dogs" asp-action="Details" asp-route-id="@item.DogId" class="dropdown-item">@Html.DisplayFor(modelItem => item.DogName)</a>
                                }
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Posts" asp-action="Index">Блог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Contact">Контакты</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link"> @User.Identity.Name</a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input style="color:#000000" class="nav-link" type="submit" value="Выход" />
                                </form>
                            </li> }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Вход    </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
                            </li>}
                    </ul>

                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

            </div>
        </nav>
    </header>
    <!-- END header -->



    <section class="home-slider inner-page owl-carousel">
        <div class="slider-item" style="background-image: url('../img/slider-1.jpg');">

            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>Контакты</h1>
                        <p class="mb-5">Собаки – лучшие существа на планете. Они добры, верны, и всегда готовы прийти на помощь хозяину. Они любят нас безусловно, в любом виде и в любой одежде.</p>
                    </div>
                </div>
            </div>

        </div>
    </section>
    <!-- END slider -->
    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-md-6 order-2 mb-5">
                    <div class="row justify-content-right">
                        <div class="col-md-8 mx-auto contact-form-contact-info">
                            <p class="d-flex">
                                <span class="ion-ios-location icon mr-5"></span>
                                <span>Минск, ул. Леонида Беды 4</span>
                            </p>

                            <p class="d-flex">
                                <span class="ion-ios-telephone icon mr-5"></span>
                                <span>+375333085679</span>
                            </p>

                            <p class="d-flex">
                                <span class="ion-android-mail icon mr-5"></span>
                                <span>dogblog@mail.com</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



    <section class="section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 element-animate">
                <div class="col-md-8 text-center">
                    <h2 class=" heading mb-4">Воспитание собаки — основа для будущей дрессировки</h2>
                    <p class="mb-5 lead">Воспитание собаки заключается в выработке правильного поведения и формирования характера. Причём оно не только является базисом для будущей успешной дрессировки и предшествует её началу.</p>
                </div>
            </div>
            <div class="row element-animate">
                <div class="major-caousel js-carousel-1 owl-carousel">
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="~/img/person_1.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Кристина Севрук</h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="~/img/person_2.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Михаил Евгеньевич</h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="~/img/person_3.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Николай Петров</h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="~/img/person_4.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Александра Даниленко</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END slider -->
            </div>
        </div>
    </section>
    <!-- END section -->

    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>

    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.waypoints.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>