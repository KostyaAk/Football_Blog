@model IEnumerable<test.Domain.Core.Dog>

<!doctype html>
<html lang="en">
<head>
    <title>DogBlog</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800" rel="stylesheet">

    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <link rel="stylesheet" href="fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="fonts/fontawesome/css/font-awesome.min.css">

    <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">

    <!-- Theme Style -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <header role="banner">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand absolute" asp-controller="Home" asp-action="Index">Dog_blog</a>

                <div class="collapse navbar-collapse" id="navbarsExample05">
                    <ul class="navbar-nav mx-auto pl-lg-5 pl-0">

                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Главная страница</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">О нас</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="dropdown04" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Породы</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown04">
                                @foreach (var item in Model)
                                {
                                    <a asp-controller="Dogs" asp-action="Details" asp-route-id="@item.DogId" class="dropdown-item">@Html.DisplayFor(modelItem => item.DogName)</a>
                                }
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Posts" asp-action="Index">Блог</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Контакты</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
            <li class="nav-item">
                <a class="nav-link"> @User.Identity.Name</a>
            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <input style="color:#000000" class="nav-link" type="submit" value="Выход" />
                                </form>
                            </li> }
                                        else
                                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Вход    </a>
                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
                                            </li>}
                    </ul>

                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

            </div>
        </nav>
    </header>
    <!-- END header -->

    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image: url('img/slider-1.jpg');">

            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>Любовь к животным</h1>
                        <p class="mb-5">Собаки – лучшие существа на планете. Они добры, верны, и всегда готовы прийти на помощь хозяину. Они любят нас безусловно, в любом виде и в любой одежде. </p>
                        <p><a asp-controller="Posts" asp-action="Index" class="btn btn-white btn-outline-white">Советы экспертов</a></p>
                    </div>
                </div>
            </div>

        </div>

        <div class="slider-item" style="background-image: url('img/slider-2.jpg');">
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>Собаки – самые верные друзья</h1>
                        <p class="mb-5">Об этом знает каждый человек, но найти подходящего питомца иногда бывает затруднительно. Для этого и создан наш блог, чтобы лучше ознакомится с особенностями каждой породы и узнать мнение профессионалов</p>
                        <p><a asp-controller="Dogs" asp-action="Index" class="btn btn-white btn-outline-white">Описания пород</a></p>
                    </div>
                </div>
            </div>

        </div>

    </section>
    <!-- END slider -->

    <section class="section element-animate">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-md-4"></div>
                <div class="col-md-8 section-heading">
                    <h2>Собака - друг человека</h2>
                    <p class="small-sub-heading">Воспитание собаки</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <img src="img/dog_1.jpg" alt="Image placeholder" class="img-fluid">
                </div>
                <div class="col-md-4">
                    <p>Именно это высказывание - "Собака - друг человека" - является одним из наиболее распространенных в мире домашних животных. Да, действительно, собака никогда не обманет, не предаст, не осудит. Мы с легкостью прощаем этому животному любую выходку и нехороший поступок. </p>
                    <p>Даже известный немецкий писатель Гейне сказал: "Чем больше узнаю людей, тем больше нравятся собаки". Собака - друг, и иногда чуть ли не лучший друг человеку. Во всяком случае, многие в этом уверены.</p>
                    <p>Конечно же, все эти высказывания не лишены смысла. Собака, безусловно, преданное, благодарное, чуткое животное, одомашненное человеком одним из первых.Но в процессе эволюционного развития между собакой и человеком установилась, безусловно, некая связь.</p>
                </div>
                <div class="col-md-4">
                    <p>Если, к примеру, взять щенка волка, вырастить его, то в результате Вы не получите привязанности собаки. Возможна лишь частичная привязанность, как у чау-чау и некоторых лаек.Эта особая связь между человеком и собакой лишь слегка колеблет законы, не нарушая их. В целом, они остаются неизменными.</p>
                    <p>В понимании собаки люди не совсем члены стаи. Это "полубоги" или нечто подобное. Они, несомненно, оценивают нас как животных более высокоразвитых, прогрессивных. В их сознании, несомненно, шевелится некое понимание этого факта. От этого и некая покорность, боязнь, если можно так выразится.</p>
                   
                </div>
            </div>
        </div>
    </section>

    <section class="section bg-light">
        <div class="container">
            <div class="row justify-content-center mb-5 element-animate">
                <div class="col-md-8 text-center">
                    <h2 class=" heading mb-4">Воспитание собаки — основа для будущей дрессировки</h2>
                    <p class="mb-5 lead">Воспитание собаки заключается в выработке правильного поведения и формирования характера. Причём оно не только является базисом для будущей успешной дрессировки и предшествует её началу.</p>
                </div>
            </div>
            <div class="row element-animate">
                <div class="major-caousel js-carousel-1 owl-carousel">
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="img/person_1.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Кристина Севрук</h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="img/person_2.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Михаил Евгеньевич</h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="img/person_3.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Николай Петров</h3>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="media d-block media-custom text-center">
                            <img src="img/person_4.jpg" alt="Image Placeholder" class="img-fluid">
                            <div class="media-body">
                                <h3 class="mt-0 text-black">Александра Даниленко</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END slider -->
            </div>
        </div>
    </section>
    <!-- END section -->

    <section class="section border-t">
        <div class="container">
            <div class="row justify-content-center mb-5 element-animate">
                <div class="col-md-8 text-center">
                    <h2 class=" heading mb-4">Породы собак</h2>
                    <p class="mb-5 lead">Мы намеренно выбираем собаку с учетом ее внешности и темперамента - вот и весь секрет. Затем пёс в течение жизни перенимает привычки и повадки любимого человека, что еще больше подчеркивает "родство душ".</p>
                </div>
            </div>

            <div class="row no-gutters">
                @foreach (var item in Model)
                {

                    <div class="col-md-4 element-animate">
                        <a asp-controller="Dogs" asp-action="Details" asp-route-id="@item.DogId" class="link-thumbnail">
                            <h3>@Html.DisplayFor(modelItem => item.DogName)</h3>
                            <span class="ion-plus icon"></span>
                            <img src="@Html.DisplayFor(modelItem => item.DogImage)" alt="Image placeholder" class="img-fluid">
                        </a>
                    </div>

                }
            </div>

        </div>
    </section>
    <!-- END section -->


    <footer class="site-footer" role="contentinfo">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-4 mb-5">
