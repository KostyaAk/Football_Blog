@model IEnumerable<football_blog.Models.Club>

<!doctype html>
<html lang="en">
<head>
    <title>Football Blog</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700,800" rel="stylesheet">

    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/animate.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <link rel="stylesheet" href="fonts/ionicons/css/ionicons.min.css">
    <link rel="stylesheet" href="fonts/fontawesome/css/font-awesome.min.css">

    <link rel="stylesheet" href="fonts/flaticon/font/flaticon.css">

    <!-- Theme Style -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>

    <header role="banner">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand absolute" asp-controller="Home" asp-action="Index">Football_blog</a>

                <div class="collapse navbar-collapse" id="navbarsExample05">
                    <ul class="navbar-nav mx-auto pl-lg-5 pl-0">

                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Index">Главная страница</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">О нас</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Posts" asp-action="Index">Блог</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                    <li class="nav-item">
                        <a class="nav-link"> @User.Identity.Name</a>
                    </li>
                                    <li class="nav-item">
                                        <form method="post" asp-controller="Account" asp-action="Logout">
                                            <input style="color:#000000" class="nav-link" type="submit" value="Выход" />
                                        </form>
                                    </li>
 }
                                else
                                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Вход    </a>
                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Account" asp-action="Register">Регистрация</a>
                                    </li>
}
                    </ul>

                </div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

            </div>
        </nav>
    </header>
    <!-- END header -->

    <section class="home-slider owl-carousel">
        <div class="slider-item" style="background-image: url('img/F1.jpg');">

            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>футбол</h1>
                        <p class="mb-5">Футбол - это мужская война, в которой сражение - праздник, а победа - счастье!</p>
                        <p><a asp-controller="Posts" asp-action="Index" class="btn btn-white btn-outline-white">Советы экспертов</a></p>
                    </div>
                </div>
            </div>

        </div>

        <div class="slider-item" style="background-image: url('img/F3.jpg');">
            <div class="container">
                <div class="row slider-text align-items-center justify-content-center">
                    <div class="col-md-8 text-center col-sm-12 element-animate">
                        <h1>больше, чем спорт</h1>
                        <p class="mb-5">
                            Футбол - это игра, которая не знает пауз и не терпит остановок!
                        </p>
                        <p><a asp-controller="Dogs" asp-action="Index" class="btn btn-white btn-outline-white">Описания клубов</a></p>
                    </div>
                </div>
            </div>

        </div>

    </section>
    <!-- END slider -->
    <section class="section border-t">
        <div class="container">
            <div class="row justify-content-center mb-5 element-animate">
                <div class="col-md-8 text-center">
                    <h2 class=" heading mb-4">Футбольные клубы</h2>
                    <p class="mb-5 lead"> Футбольная команда — это 11 игроков стартового состава, запас, дубль, школа. Футбольный клуб же — это целая организация. Тут вам и президент, и тренер, и стадион с базой, и болельщики и многое-многое другое </p>
                </div>
            </div>



        </div>
    </section>
    <!-- END section -->


    <footer class="site-footer" role="contentinfo">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md-4 mb-5">
                    <h3>Football_Blog</h3>
                    <p class="mb-5">На сегодняшний день футбол является самым популярным и массовым видом спорта, передающий своему зрителю ту энергию, запал и стремление к победе, которую переживают игроки соревнующихся команд. </p>


                </div>
                <div class="col-md-5 mb-5">
                    <h3>Контактная информация</h3>
                    <ul class="list-unstyled footer-link">
                        <li class="d-block">
                            <span class="d-block">Адрес:</span>
                            <span class="text-white">Минск, ул. Леонида Беды 4</span>
                        </li>
                        <li class="d-block"><span class="d-block">Телефон:</span><span class="text-white">+375321345671</span></li>
                        <li class="d-block"><span class="d-block">Email:</span><span class="text-white">football_minsk.com</span></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-5">
                    <h3>Смотрите так же</h3>
                    <ul class="list-unstyled footer-link">
                        <li><a asp-controller="Home" asp-action="About">О нас</a></li>
                        <li><a asp-controller="Dogs" asp-action="Index">Клубы</a></li>
                        <li><a asp-controller="Posts" asp-action="Index">Блог</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Контакты</a></li>
                    </ul>
                </div>
                <div class="col-md-3">

                </div>
            </div>

        </div>
    </footer>
    <!-- END footer -->
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>

    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/owl.carousel.min.js"></script>
    <script src="js/jquery.waypoints.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>